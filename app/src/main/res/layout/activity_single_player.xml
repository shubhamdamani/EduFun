<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_single_player"
    android:background="@drawable/arena_bkg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/score_bar"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:id="@+id/myscore"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/yellow_btn"
            android:paddingVertical="10dp"
            android:text="0"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/mytimer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/clock"
            android:paddingVertical="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="60"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mytxt_draw_label"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:text="To Draw "
        android:textAlignment="center"
        android:layout_below="@+id/score_bar"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />


    <com.example.droidrun.DrawingDesign
        android:layout_margin="20dp"
        android:id="@+id/mydrawingView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mytxt_draw_label" />

    <Button
        android:id="@+id/mybtn_detect"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/mydrawingView"
        android:layout_alignParentStart="true"
        android:background="@drawable/yellow_btn"
        android:layout_marginHorizontal="130dp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"

        android:text="Detect" />

    <Button
        android:id="@+id/mybtn_next"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:background="@drawable/yellow_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:text="Next" />

    <Button
        android:id="@+id/mybtn_clear3"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/yellow_btn"
        android:textStyle="bold"
        android:text="Clear Paint" />



    <TextView
        android:id="@+id/mytxt_result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:textStyle="bold"
        android:text="TextView" />

</RelativeLayout>