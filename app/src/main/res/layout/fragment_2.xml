<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/result_bar"
        android:layout_marginTop="40dp">
        <TextView
            android:id="@+id/user_score"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:paddingVertical="15dp"
            android:background="@drawable/yellow_btn"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="0:0"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"

             />
        <TextView
            android:id="@+id/timer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/clock"
            android:text="60 "
            android:textStyle="bold"
            android:paddingVertical="15dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_draw_label"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:text="To Draw "
        android:textAlignment="center"
        android:layout_below="@+id/result_bar"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />


    <com.example.droidrun.DrawingDesign
        android:id="@+id/drawingView"
        android:layout_margin="20dp"
        android:layout_width="350sp"
        android:layout_height="350sp"
        android:layout_below="@+id/txt_draw_label"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/btn_detect"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="130dp"
        android:textStyle="bold"
        android:layout_below="@+id/drawingView"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/yellow_btn"

        android:text="Detect" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/yellow_btn"

        android:text="Next" />

    <Button
        android:id="@+id/btn_clear3"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/yellow_btn"

        android:text="Clear Paint" />



    <TextView
        android:id="@+id/txt_result_label"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="105dp"
        android:text="TextView" />

</RelativeLayout>